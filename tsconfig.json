{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "hooks": ["./src/hooks/*"]
    }
  },
  "exclude": ["dist", "node_modules", "build", ".vscode", ".nuxt", "coverage", "jspm_packages", "tmp", "temp", "bower_components", ".npm", ".yarn"],
  "include": ["src"]
}
